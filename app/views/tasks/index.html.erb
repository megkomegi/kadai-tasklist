<h1>タスク一覧</h1>
<% if logged_in? %>
  <div class="row">
  
  <div class="col-sm-8">
    <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タスク</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
          </tr>
          
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
  <div class="col-sm-8">
    <%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
  </div> 
</div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>タスク管理</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
  <div>
    <%= paginate @tasks %>
  </div>

